<div class="navbar navbar-expand-sm searchSubnav">

	<div class="container">

		<% if params[:find].present? %>
			<% @query = params[:find] %>
		<% else %>
			<% @query = params[:q] %>
		<% end %>

		<%= form_for("search", method: :get, :url => "https://archives.albany.edu/description/catalog", html: {class: 'search-query-form allSearch'}) do |f| %>
	      <div class="input-group">
			
					<input name="q" id="params-q" value="<%= @query %>" placeholder="Search all collection records..." class="search_q q form-control tt-input" type="text" />
					<input type="hidden" name="search_field" id="search_field" value="all_fields" />
					<div class="input-group-append">
					<button class="btn btn-secondary dropdown-toggle searchSelect" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Collections</button>
						<button class="btn btn-secondary dropdown-toggle searchSelect noText" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
							<div class="dropdown-menu searchOptions">
								<a class="dropdown-item" data="allSearch" href="#">Everything</a>
								<a class="dropdown-item" data="arclightSearch" href="#">Collections</a>
								<a class="dropdown-item" data="hyraxSearch" href="#">Digital Selections</a>
							</div>
						<button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
					</div>
		  	</div>
		<% end %>

		<%= form_for("search", method: :get, :url => search_action_url, html: {class: 'search-query-form arclightSearch'}) do |f| %>
		  <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>
		  <%= hidden_field_tag 'search_field', 'all_fields'  %>
	      <div class="input-group">
		
			<input id="q" name="q" id="params-q" value="<%= @query %>" placeholder="Search all collection records..." class="search_q q form-control tt-input" type="text" data-autocomplete-enabled="true" data-autocomplete-path=<%= search_action_path(action: :suggest) %> />
					<div class="input-group-append">
					<button class="btn btn-secondary dropdown-toggle searchSelect" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Collections</button>
					<button class="btn btn-secondary dropdown-toggle searchSelect noText" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
					 <div class="dropdown-menu searchOptions">
						 <a class="dropdown-item" data="allSearch" href="#">Everything</a>
						 <a class="dropdown-item" data="arclightSearch" href="#">Collections</a>
						 <a class="dropdown-item" data="hyraxSearch" href="#">Digital Selections</a>
					 </div>
				<button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
		  	</div>
		  </div>
		<% end %>

		<%= form_for("search", method: :get, :url => "https://archives.albany.edu/catalog/", html: {class: 'search-query-form hyraxSearch'}) do |f| %>
		  <%= hidden_field_tag 'search_field', 'all_fields'  %>
	      <div class="input-group">
		
			<input name="q" id="params-q" value="<%= @query %>" placeholder="Search only online digital content..." class="search_q q form-control tt-input" type="text" />
					<div class="input-group-append">
					<button class="btn btn-secondary dropdown-toggle searchSelect" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Digital Selections</button>
					<button class="btn btn-secondary dropdown-toggle searchSelect noText" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
					 <div class="dropdown-menu searchOptions">
						 <a class="dropdown-item" data="allSearch" href="#">Everything</a>
						 <a class="dropdown-item" data="arclightSearch" href="#">Collections</a>
						 <a class="dropdown-item" data="hyraxSearch" href="#">Digital Selections</a>
					 </div>
				<button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
		  	</div>
		  </div>
		<% end %>

		<a class="aboutSearch" href="/search"><i class="fa fa-question-circle"></i> Search Help</a>

	</div>

</div>